<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/third_popupwindow_layout_null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/third_playout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"></RelativeLayout>

        <LinearLayout
            android:id="@+id/third_playout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/third_popupwindow_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext_white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/third_popupwindow_textView_status"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="设置状态"
                    android:textColor="@color/color_blue_foot" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.2px"
                    android:background="#999999" />

                <TextView
                    android:id="@+id/third_popupwindow_textView_look"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="查看大头像"
                    android:textColor="@color/color_blue_foot" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0.2px"
                    android:background="#999999" />

                <TextView
                    android:id="@+id/third_popupwindow_textView_change"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="更换头像"
                    android:textColor="@color/color_blue_foot" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/third_popupwindow_textView_quxiao"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_edittext_white"
                    android:gravity="center"
                    android:text="取  消"
                    android:textColor="@color/color_blue_foot" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>