<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/title">

        <LinearLayout
            android:id="@+id/phone_regster_layout__back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"


            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="10dp">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/web_bar_back_press"
                android:paddingLeft="5dp"
                android:paddingRight="10dp" />

        </LinearLayout>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="注  册"
            android:textSize="18dp"
            android:textColor="@android:color/white"/>


    </RelativeLayout>



    <EditText
        android:id="@+id/phone_regster_editText_nickname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_login_edittext"
        android:drawableLeft="@mipmap/ifc"
        android:maxLength="8"
        android:hint="请输入昵称"
        android:padding="10dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_login_edittext"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/phone_regster_layout_woman"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/shape_regster_sex_woman_focused"
            android:gravity="center">

            <TextView
                android:id="@+id/phone_regster_textview_woman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/kml"
                android:text=" 女"
                android:textColor="@android:color/white" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/phone_regster_layout_man"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/shape_regster_sex_man_nomal"
            android:gravity="center">

            <TextView
                android:id="@+id/phone_regster_textview_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/kmn"
                android:textColor="@color/tab_text_bg"

                android:text=" 男" />

        </LinearLayout>


    </LinearLayout>

    <EditText
        android:id="@+id/phone_regster_editText_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_login_edittext"
        android:drawableLeft="@mipmap/fdi"
        android:maxLength="16"
        android:inputType="textPassword"
        android:hint="请输入密码"
        android:padding="10dp" />

    <EditText
        android:id="@+id/phone_regster_editText_password_again"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_login_edittext"
        android:drawableLeft="@mipmap/fdi"
        android:maxLength="16"
        android:hint="请确认密码"
        android:inputType="textPassword"
        android:padding="10dp" />

    <TextView
        android:id="@+id/phone_regster_textview_enter"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"

        android:background="@drawable/shape_login_textview_nomal"
        android:gravity="center"
        android:padding="5dp"
        android:text="注  册"
        android:textColor="@android:color/white"
        android:textSize="16dp" />


</LinearLayout>
